{{#if message}}
<div class="container p-4">
    <div class="row">
        <div class="col-4 mx-auto">
            <div class="alert alert-danger alert-dismissible show fade" role="alert">{{message}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
            </div>
            
        </div>
   
    </div>
</div>
   {{/if}}

{{#if success}}
<div class="container p-4">
    <div class="row">
        <div class="col-4 mx-auto">
            <div class="alert alert-success alert-dismissible show fade" role="alert">{{success}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
            </div>
            
        </div>
   
    </div>
</div>
   {{/if}}

   